{
  "name": "clms-barcode-scanner",
  "version": "1.0.0",
  "description": "Background barcode scanner for CLMS Library System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win portable"
  },
  "author": "CLMS",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "socket.io-client": "^4.7.2"
  },
  "build": {
    "appId": "com.clms.barcode-scanner",
    "productName": "CLMS Scanner",
    "asar": true,
    "win": {
      "target": "portable"
    },
    "portable": {
      "artifactName": "CLMS-Scanner-Portable.${ext}"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.html",
      "renderer.js",
      "styles.css",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": []
  }
}
