{
  "name": "clms-barcode-scanner",
  "version": "1.0.0",
  "description": "Background barcode scanner for CLMS Library System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win portable"
  },
  "author": "CLMS",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
