# ============================================================================
# CLMS Production Environment Variables
# ============================================================================
# Purpose: Production configuration template
# Usage: Copy to .env.production and fill with actual values
# SECURITY: Never commit this file with real credentials to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
NODE_ENV=production
APP_NAME=CLMS
LOG_LEVEL=info

# ----------------------------------------------------------------------------
# Database Configuration (MySQL)
# ----------------------------------------------------------------------------
# IMPORTANT: Change these passwords in production!
MYSQL_ROOT_PASSWORD=CHANGE_ME_STRONG_ROOT_PASSWORD
MYSQL_DATABASE=clms_database
MYSQL_USER=clms_user
MYSQL_PASSWORD=CHANGE_ME_STRONG_USER_PASSWORD
MYSQL_HOST_PORT=3308
DATABASE_URL=mysql://clms_user:CHANGE_ME_STRONG_USER_PASSWORD@mysql:3306/clms_database

# Optional: Koha Database (if integrating with existing Koha system)
# KOHA_MYSQL_ROOT_PASSWORD=CHANGE_ME_KOHA_ROOT_PASSWORD
# KOHA_MYSQL_DATABASE=koha_database
# KOHA_MYSQL_USER=koha_user
# KOHA_MYSQL_PASSWORD=CHANGE_ME_KOHA_PASSWORD
# KOHA_DATABASE_URL=mysql://koha_user:CHANGE_ME_KOHA_PASSWORD@koha-mysql:3306/koha_database

# ----------------------------------------------------------------------------
# Redis Configuration
# ----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_HOST_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD

# ----------------------------------------------------------------------------
# Backend API Configuration
# ----------------------------------------------------------------------------
BACKEND_PORT=3001
BACKEND_HOST_PORT=3001
FRONTEND_URL=http://192.168.1.100:3000
APP_BASE_URL=http://192.168.1.100:3000
CORS_ORIGIN=http://192.168.1.100:3000

# ----------------------------------------------------------------------------
# Frontend Configuration
# ----------------------------------------------------------------------------
FRONTEND_HOST_PORT=3000
PUBLIC_API_URL=http://192.168.1.100:3001
PUBLIC_WS_URL=ws://192.168.1.100:3001

# ----------------------------------------------------------------------------
# Security Configuration (Production)
# ----------------------------------------------------------------------------
# CRITICAL: Generate strong random values for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_GENERATE_64_CHAR_RANDOM_STRING
BCRYPT_ROUNDS=12

# ----------------------------------------------------------------------------
# Optional: Google Sheets Integration
# ----------------------------------------------------------------------------
# GOOGLE_CREDENTIALS_PATH=./google-credentials.json
# GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here

# ----------------------------------------------------------------------------
# Optional: Email Configuration (For notifications)
# ----------------------------------------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=library@school.edu
# SMTP_PASS=your_app_specific_password
# SMTP_FROM=noreply@school.edu

# ----------------------------------------------------------------------------
# File Upload Configuration
# ----------------------------------------------------------------------------
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# ----------------------------------------------------------------------------
# Session Configuration
# ----------------------------------------------------------------------------
SESSION_TIMEOUT=86400
MAX_CONCURRENT_SESSIONS=5

# ----------------------------------------------------------------------------
# Backup Configuration
# ----------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ----------------------------------------------------------------------------
# Performance & Monitoring
# ----------------------------------------------------------------------------
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true
