# ============================================================================
# CLMS Development Environment Variables
# ============================================================================
# Purpose: Development configuration template
# Usage: Copy to .env for development
# IMPORTANT: Never commit .env or .env.production to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
NODE_ENV=development
APP_NAME=CLMS
LOG_LEVEL=debug

# ----------------------------------------------------------------------------
# Database Configuration (MySQL)
# ----------------------------------------------------------------------------
MYSQL_ROOT_PASSWORD=clms_root_password
MYSQL_DATABASE=clms_database
MYSQL_USER=clms_user
MYSQL_PASSWORD=clms_password
MYSQL_HOST_PORT=3308
DATABASE_URL=mysql://clms_user:clms_password@localhost:3308/clms_database

# Optional: Koha Database (if integrating with existing Koha system)
KOHA_MYSQL_ROOT_PASSWORD=koha_root_password
KOHA_MYSQL_DATABASE=koha_database
KOHA_MYSQL_USER=koha_user
KOHA_MYSQL_PASSWORD=koha_password
KOHA_DATABASE_URL=mysql://koha_user:koha_password@localhost:3309/koha_database

# ----------------------------------------------------------------------------
# Redis Configuration
# ----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_HOST_PORT=6379
# Note: Redis password not set in development for simplicity

# ----------------------------------------------------------------------------
# Backend API Configuration
# ----------------------------------------------------------------------------
BACKEND_PORT=3001
BACKEND_HOST_PORT=3001
CORS_ORIGIN=http://localhost:3000

# ----------------------------------------------------------------------------
# Frontend Configuration
# ----------------------------------------------------------------------------
FRONTEND_HOST_PORT=3000
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001
VITE_APP_NAME=CLMS Development

# ----------------------------------------------------------------------------
# Security Configuration (Development)
# ----------------------------------------------------------------------------
JWT_SECRET=dev_jwt_secret_change_in_production_12345
BCRYPT_ROUNDS=10

# ----------------------------------------------------------------------------
# Optional: Google Sheets Integration
# ----------------------------------------------------------------------------
# GOOGLE_CREDENTIALS_PATH=./google-credentials.json
# GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here

# ----------------------------------------------------------------------------
# Optional: Email Configuration
# ----------------------------------------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# SMTP_FROM=noreply@clms.local

# ----------------------------------------------------------------------------
# Optional: File Upload Configuration
# ----------------------------------------------------------------------------
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# ----------------------------------------------------------------------------
# Optional: Session Configuration
# ----------------------------------------------------------------------------
SESSION_TIMEOUT=86400
MAX_CONCURRENT_SESSIONS=3
