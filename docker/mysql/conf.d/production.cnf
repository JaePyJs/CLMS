# MySQL Production Configuration
# Optimized for CLMS with performance and security hardening

[mysqld]
# Basic settings
bind-address = 0.0.0.0
port = 3306
user = mysql
default-storage-engine = InnoDB
socket = /var/run/mysqld/mysqld.sock
pid-file = /var/run/mysqld/mysqld.pid

# Character set and collation
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init-connect = 'SET NAMES utf8mb4'

# Security settings
skip-name-resolve
skip-symbolic-links
local-infile = 0
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

# Performance tuning (adjust based on available resources)
# For a 2GB RAM server
innodb_buffer_pool_size = 1G
innodb_buffer_pool_instances = 1
innodb_log_file_size = 256M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 1
innodb_flush_method = O_DIRECT

# Memory settings
max_connections = 200
max_connect_errors = 1000
connect_timeout = 10
wait_timeout = 600
interactive_timeout = 600
max_allowed_packet = 64M
thread_cache_size = 50
table_open_cache = 2000
table_definition_cache = 1400

# Query cache (disabled for performance in MySQL 8, can be enabled if needed)
# query_cache_type = 1
# query_cache_size = 64M
# query_cache_limit = 2M

# Slow query log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
log_queries_not_using_indexes = 1

# General log (disable in production for performance)
# general_log = 1
# general_log_file = /var/log/mysql/general.log

# Error log
log_error = /var/log/mysql/error.log
log_error_verbosity = 2

# Binary log for replication and point-in-time recovery
log_bin = /var/log/mysql/mysql-bin.log
binlog_format = ROW
binlog_expire_logs_seconds = 604800  # 7 days
max_binlog_size = 100M
sync_binlog = 1

# InnoDB settings
innodb_file_per_table = 1
innodb_open_files = 400
innodb_io_capacity = 200
innodb_io_capacity_max = 400
innodb_read_io_threads = 8
innodb_write_io_threads = 8
innodb_thread_concurrency = 0
innodb_autoinc_lock_mode = 2

# MyISAM settings (for system tables)
key_buffer_size = 32M
myisam_sort_buffer_size = 8M

# Temporary tables
tmp_table_size = 64M
max_heap_table_size = 64M

# Replication settings (for master)
server-id = 1
log-slave-updates = 1
gtid-mode = ON
enforce-gtid-consistency = ON
binlog-checksum = CRC32
master-verify-checksum = 1
slave-sql-verify-checksum = 1

# Performance schema (enable for monitoring)
performance_schema = ON
performance_schema_max_table_instances = 12500
performance_schema_max_table_handles = 4000

# Plugin settings
plugin-load = validate_password.so
validate-password.policy = MEDIUM
validate-password.length = 12
validate-password.mixed-case-count = 1
validate-password.number-count = 1
validate-password.special-char-count = 1

[mysqldump]
quick
max_allowed_packet = 64M

[mysql]
no-auto-rehash

[client]
default-character-set = utf8mb4

[mysql_safe]
log-error = /var/log/mysql/error.log
pid-file = /var/run/mysqld/mysqld.pid