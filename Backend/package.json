{
  "name": "clms-backend",
  "version": "1.0.0",
  "description": "CLMS Backend - Comprehensive Library Management System API",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/server.js",
    "dev": "tsx watch src/server.ts",
    "start:dev": "tsx watch src/server.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx scripts/seed.ts",
    "db:sample": "tsx src/scripts/generate-sample-data.ts",
    "db:clear": "tsx src/scripts/clear-all-data.ts",
    "db:setup": "tsx src/scripts/setup-library-rooms.ts",
    "db:reset": "prisma migrate reset --force",
    "import:data": "tsx scripts/import-data.ts",
    "import:students": "tsx scripts/import-students.ts",
    "import:books": "tsx scripts/import-books.ts",
    "generate:barcodes": "tsx scripts/generate-barcodes-new.ts",
    "generate:qr": "tsx scripts/generate-qr-codes.ts",
    "sync:qr": "tsx scripts/sync-qr-to-sheets.ts",
    "backup:now": "tsx scripts/backup.ts",
    "docs:update": "tsx src/scripts/updateDocumentation.ts",
    "docs:sync": "tsx src/scripts/scheduledDocumentationUpdate.ts run",
    "docs:schedule": "tsx src/scripts/scheduledDocumentationUpdate.ts start",
    "docs:verify": "tsx src/scripts/verifyDocumentation.ts check",
    "docs:fix": "tsx src/scripts/verifyDocumentation.ts fix",
    "cli": "tsx src/cli/index.ts"
  },
  "keywords": [
    "library",
    "management",
    "system",
    "automation",
    "google-sheets",
    "typescript",
    "prisma"
  ],
  "author": "Educational Library Management System",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@prisma/client": "^5.22.0",
    "@zxing/library": "^0.20.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "bwip-js": "^4.2.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "google-auth-library": "^9.7.0",
    "google-spreadsheet": "^3.3.0",
    "googleapis": "^128.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.2",
    "node-cron": "^3.0.3",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.4",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/google-spreadsheet": "^3.3.2",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.12.0",
    "@typescript-eslint/parser": "^8.12.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "tsx": "^4.6.2",
    "typescript": "^5.9.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
