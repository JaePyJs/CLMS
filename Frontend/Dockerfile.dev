# ============================================================================
# CLMS Frontend Development Dockerfile
# ============================================================================
# Purpose: Hot-reload development environment with Vite HMR
# Features: Volume mounting, fast refresh, debugging support
# ============================================================================

FROM node:20-bullseye AS development

# Install system dependencies for native modules
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    curl \
    bash \
    libssl-dev \
    libffi-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install all dependencies (including devDependencies)
RUN npm install --legacy-peer-deps

# Copy application source (overridden by volume mount in development)
COPY . .

# Install correct rollup dependency for glibc
RUN npm install @rollup/rollup-linux-x64-gnu --save-dev

# Create non-root user for security
RUN groupadd -g 1001 nodejs && \
    useradd -u 1001 -g nodejs nextjs && \
    chown -R nextjs:nodejs /app

# Switch to non-root user
USER nextjs

# Expose Vite dev server port
EXPOSE 3000

# Development command with Vite HMR
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
