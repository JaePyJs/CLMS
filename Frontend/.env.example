# CLMS Frontend Environment Configuration
# Copy this file to .env and update values as needed

# API Configuration
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Application Configuration
VITE_APP_NAME=CLMS - Comprehensive Library Management System
VITE_APP_VERSION=1.0.0

# Development Configuration
VITE_DEV_MODE=true
VITE_ENABLE_DEVTOOLS=true

# Analytics & Monitoring (Optional)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=

# Feature Flags
VITE_ENABLE_OFFLINE_SUPPORT=true
VITE_ENABLE_BARCODE_SCANNING=true
VITE_ENABLE_PWA_FEATURES=false

# Performance Configuration
VITE_QUERY_STALE_TIME=5 * 60 * 1000  # 5 minutes in milliseconds
VITE_QUERY_CACHE_TIME=10 * 60 * 1000  # 10 minutes in milliseconds

# UI Configuration
VITE_DEFAULT_THEME=system
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_SOUND_EFFECTS=false

# Barcode Scanner Configuration
VITE_BARCODE_SCANNER_MODE=keyboard  # keyboard | camera | both
VITE_BARCODE_SCAN_DELAY=500  # milliseconds between scans

# Session Configuration
VITE_SESSION_TIMEOUT=30 * 60 * 1000  # 30 minutes in milliseconds
VITE_WARNING_TIMEOUT=5 * 60 * 1000  # 5 minutes before expiry

# File Upload Configuration
VITE_MAX_FILE_SIZE=5 * 1024 * 1024  # 5MB in bytes
VITE_ALLOWED_FILE_TYPES=.csv,.xlsx,.xls

# Development Only (remove in production)
VITE_MOCK_API=false
VITE_DEBUG_MODE=false